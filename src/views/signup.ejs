<% include partials/header %>

<body class="theme-orange">
  <!-- WRAPPER -->
  <div id="wrapper">
    <div class="vertical-align-wrap">
      <div class="vertical-align-middle auth-main">
        <div class="auth-box">
          <div class="top">
            <img
              src="http://www.wrraptheme.com/templates/lucid/hr/html/assets/images/logo-white.svg"
              alt="Lucid"
            />
          </div>
          <div class="card">
            <div class="header">
              <p class="lead">Create an account</p>
            </div>
            <div class="body">
              <form
                class="form-auth-small"
                action="/signup"
                method="POST"
              >
                <div class="form-group">
                  <label
                    for="signup-email"
                    class="control-label sr-only"
                    >Name</label
                  >
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="signup-name"
                    placeholder="Your name"
                  />
                </div>
                <div class="form-group">
                  <label
                    for="signup-email"
                    class="control-label sr-only"
                    >Email</label
                  >
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    id="signup-email"
                    placeholder="Your email"
                  />
                </div>
                <div class="form-group">
                  <label
                    for="signup-phone"
                    class="control-label sr-only"
                    >Phone Number</label
                  >
                  <input
                    type="number"
                    name="phone"
                    class="form-control"
                    id="signup-phone"
                    placeholder="Phone Number"
                  />
                </div>
                <div class="form-group">
                  <label
                    for="signup-phone"
                    class="control-label sr-only"
                    >Reg Number</label
                  >
                  <input
                    type="text"
                    name="regNo"
                    class="form-control"
                    id="signup-regno"
                    placeholder="Reg Number"
                  />
                </div>
                <div class="form-group">
                  <label
                    for="signup-password"
                    class="control-label sr-only"
                    >Password</label
                  >
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    id="signup-password"
                    placeholder="Password"
                  />
                </div>
                <button
                  type="submit"
                  class="btn btn-primary btn-lg btn-block"
                >
                  REGISTER
                </button>
                <div class="bottom">
                  <span class="helper-text"
                    >Already have an account?
                    <a href="/">Login</a></span
                  >
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END WRAPPER -->
</body>
